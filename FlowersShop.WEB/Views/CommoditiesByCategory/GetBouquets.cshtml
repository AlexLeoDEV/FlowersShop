@model IEnumerable<FlowersShop.WEB.Models.CommodityViewModel>
@{
    ViewBag.Title = "Bouquets";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Name)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Description)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Preferences)
        </th>
        <th>
            @Html.DisplayNameFor(modelItem => modelItem.Price)
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Preferences
            </td>
            <td>
                @item.Price
            </td>
            <td>
                <a href="@Url.Action("Details", "Commodities", new { id = item.Id })">Details</a>
            </td>
            <td>
                <a href="@Url.Action("Buy", "Order", new { id = item.Id })">Buy</a>
            </td>
        </tr>
    }
</table>
<div>
    @Html.ActionLink("Back to Home", "Index", "Commodities")
</div>


